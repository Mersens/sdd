<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_bar"
        layout="@layout/layout_title" />

    <TextView
        android:id="@+id/rz_msg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="14dp"
        android:text="@string/rz_msg"
        android:textSize="16dp" />

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black2" />

    <RelativeLayout
        android:id="@+id/layout_smrz"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/setting_item_selector" >

        <ImageView
            android:id="@+id/image_smrz"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:padding="4dp"
            android:src="@drawable/icon_wrz" />

        <LinearLayout
            android:id="@+id/linearLayout"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@id/image_smrz"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:id="@+id/tv_xszx"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:paddingLeft="16dp"
                android:text="@string/smrz"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_smrz_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/wrz_msg"
                android:textColor="#9A9A9A"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black2" />

    <RelativeLayout
        android:id="@+id/layout_bdsj"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/setting_item_selector" >

        <ImageView
            android:id="@+id/image_bdsj"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:padding="4dp"
            android:src="@drawable/icon_wrz" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@id/image_bdsj"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:paddingLeft="16dp"
                android:text="@string/bdsj"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_bdsj_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/wrz_msg"
                android:textColor="#9A9A9A"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black2" />

    <RelativeLayout
        android:id="@+id/layout_rzyx"
        android:layout_width="match_parent"
        android:layout_height="66dp"
        android:background="@drawable/setting_item_selector" >

        <ImageView
            android:id="@+id/image_rzyx"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="16dp"
            android:padding="4dp"
            android:src="@drawable/icon_wrz" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:layout_marginRight="18dp"
            android:layout_toRightOf="@id/image_rzyx"
            android:orientation="vertical"
            android:paddingLeft="10dp" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:paddingLeft="16dp"
                android:text="@string/rzyx"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/tv_rzyx_msg"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:padding="4dp"
                android:text="@string/wrz_msg"
                android:textColor="#9A9A9A"
                android:textSize="12dp" />
        </LinearLayout>

        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="16dp"
            android:src="@drawable/right" />
    </RelativeLayout>

    <View
        android:layout_width="fill_parent"
        android:layout_height="1dp"
        android:background="@color/black2" />

</LinearLayout>