<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/abc_ab_bottom_solid_light_holo"
    android:orientation="vertical" >

    <include
        android:id="@+id/layout_bar"
        layout="@layout/layout_title" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/gesture_psd_bg_color"
        android:orientation="vertical" >

        <com.shangdingdai.view.CircleImageView
            android:id="@+id/user_img"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="center"
            android:layout_marginTop="24dp"
            android:src="@drawable/icon_user_img"/>

        <TextView
            android:id="@+id/tv_hint"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="6dp"
            android:layout_marginTop="10dp"
             android:textSize="16dp"
            android:text="@string/gesture_psd_hint_psd"
            android:textColor="@color/white" />

        <com.shangdingdai.view.Lock9View
            android:id="@+id/lock_9_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_margin="22dp"
            app:lock9_enableVibrate="true"
            app:lock9_lineColor="@color/blue_light"
            app:lock9_lineWidth="4dp"
            app:lock9_nodeAreaExpand="24dp"
            app:lock9_nodeOnAnim="@anim/node_on_2"
            app:lock9_nodeSize="16dp"
            app:lock9_nodeSrc="@drawable/node_small"
            app:lock9_vibrateTime="20" />
    </LinearLayout>

</LinearLayout>