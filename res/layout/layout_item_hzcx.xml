<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:singleLine="true"
            android:text="@string/shouyiid"
            android:textColor="@color/transparent_background" />

        <TextView
            android:id="@+id/tv_shouyiid"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/transparent_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:singleLine="true"
            android:text="@string/jine"
            android:textColor="@color/transparent_background" />

        <TextView
            android:id="@+id/tv_jine"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/transparent_background" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <TextView
            android:id="@+id/textView5"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:padding="4dp"
            android:singleLine="true"
            android:text="@string/yinghuanshijian"
            android:textColor="@color/transparent_background" />

        <TextView
            android:id="@+id/tv_yinghuanshijian"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:padding="4dp"
            android:singleLine="true"
            android:text="TextView"
            android:textColor="@color/transparent_background" />
    </LinearLayout>

</LinearLayout>